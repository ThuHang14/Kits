<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Định nghĩa servlet có tên helloServlet, gắn với class HelloServlet -->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.example.todolistjsp.web.UserController</servlet-class>
    </servlet>

    <!-- Định nghĩa đường dẫn truy cập vào Servlet này -->
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>todo</servlet-name>
        <servlet-class>com.example.todolistjsp.web.TodoController</servlet-class>
    </servlet>

    <!-- Định nghĩa đường dẫn truy cập vào Servlet này -->
    <servlet-mapping>
        <servlet-name>todo</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>

</web-app>